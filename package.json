{
  "name": "ps-payload-electron-app-final",
  "version": "1.0.0",
  "main": "main.js",
  "description": "PS Payload Sender Cross-Platform Electron App",
  "scripts": {
    "start": "electron .",

    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",

    "build-all": "npm run build-mac && npm run build-win && npm run build-linux"
  },

  "dependencies": {
    "express": "^4.18.2",
    "multer": "1.4.5-lts.1"
  },

  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.0"
  },

  "build": {
    "appId": "com.ps.payloadsender.crossbuild",

    "directories": {
      "buildResources": "build",
      "output": "dist"
    },

    "asarUnpack": [
      "server.js",
      "web/**"
    ],

    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.utilities"
    },

    "win": {
      "target": [
        "nsis"
      ],
      "publisherName": "ps-payload",
      "artifactName": "ps-payload-win-${version}.exe"
    },

    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    }
  }
}
